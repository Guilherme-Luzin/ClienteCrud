@model List<ClienteCrud.Domain.Cliente>
@{
    ViewBag.Title = "Tabela de Clientes";
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nome
            </th>
            <th>
                Idade
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Idade)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Email)
                </td>
                <td>
                    <a href="@Url.Action("Create","Cliente", new {@id = item.Id})">Editar</a> |
                    <a href="@Url.Action("Details","Cliente", new {@id = item.Id})"> Detalhes</a> |
                    <a href="@Url.Action("Delete","Cliente", new {@id = item.Id})">Deletar</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Cliente")">Adicionar Novo Cliente</a>